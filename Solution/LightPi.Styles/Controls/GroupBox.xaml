<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:LightPi.Midi2OrchestratorBridgeApp.UI.Styles.Controls">
    <Style TargetType="{x:Type GroupBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GroupBox}">
                    <DockPanel Background="{StaticResource BackgroundLightBrush}">
                        <Label Margin="10"
                               Content="{TemplateBinding Header}"
                               DockPanel.Dock="Top"
                               FontSize="18"
                               Style="{StaticResource HeadlineSmallLabel}" />
                        <Border Background="{StaticResource BackgroundDarkBrush}">
                            <ContentPresenter x:Name="Content"
                                              Margin="10"
                                              VerticalAlignment="Stretch"
                                              ContentSource="Content" />
                        </Border>
                    </DockPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="controls:GroupBoxExtensions.ShowContent" Value="False">
                            <Setter TargetName="Content" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>