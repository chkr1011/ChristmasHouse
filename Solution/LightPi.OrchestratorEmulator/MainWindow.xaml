                <TextBlock x:Name="FramesPerSecondTextBlock"
                           Margin="15,0,0,0"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left"
                           FontFamily="Consolas"
                           FontSize="16"
                           Foreground="{StaticResource TextNormalBrush}"
                           Text="00 FPS" />

                <CheckBox x:Name="ForwardCheckBox"
                          Margin="10,0,0,0"
                          VerticalAlignment="Center"
                          Content="Forward"
                          DockPanel.Dock="Right"
                          IsChecked="True" />
