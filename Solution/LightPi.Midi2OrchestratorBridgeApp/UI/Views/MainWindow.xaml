<Window x:Class="LightPi.Midi2OrchestratorBridgeApp.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:LightPi.Midi2OrchestratorBridgeApp.UI.Styles.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:LightPi.Midi2OrchestratorBridgeApp.ViewModels"
        xmlns:views="clr-namespace:LightPi.Midi2OrchestratorBridgeApp.UI.Views"
        x:Name="Root"
        Title="MIDI 2 Orchestrator Bridge - LightPi"
        Width="1024"
        Height="1024"
        d:DataContext="{d:DesignInstance Type=viewModels:MainWindowViewModel,
                                         IsDesignTimeCreatable=False}"
        Background="{StaticResource BackgroundDarkBrush}"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Header="SETTINGS">
            <views:SettingsView DataContext="{Binding Settings}" />
        </GroupBox>

        <GroupBox Grid.Row="1" Header="MAPPINGS / STATUS">
            <views:MappingsView DataContext="{Binding Mappings}" />
        </GroupBox>

        <GroupBox Grid.Row="2"
                  controls:GroupBoxExtensions.ShowContent="{Binding ElementName=Root,
                                                                    Path=DataContext.Settings.ShowLog,
                                                                    UpdateSourceTrigger=PropertyChanged}"
                  Header="LOG">
            <views:LogView DataContext="{Binding Log}" />
        </GroupBox>

    </Grid>
</Window>
